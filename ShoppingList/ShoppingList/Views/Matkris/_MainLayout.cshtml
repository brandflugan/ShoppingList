<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Matkris.se</title>

    <!-- scripts -->
    <script src="~/Scripts/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

    <!-- css -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/main.css" type="text/css" />
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <script>
        //on load give active class to active subsite
        $(window).on('load', function () {

            var element = document.getElementsByClassName('menu');
            if (typeof (element) != 'undefined' && element != null) {
                // exists.
                $('.menu-item-click').each(function () {
                    var a_href = $(this).find('a').attr('href'),
                        url = window.location.pathname;
                        subsite = url.substring(url.lastIndexOf('/')+1);
                        console.log(a_href + " " + subsite);

                    if (subsite == a_href) {
                        $(this).addClass('active');
                    } else {
                        $(this).removeClass('active');
                    }
                });
            }
        });
    </script>
</body>
</html>
